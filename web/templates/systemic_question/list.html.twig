{# systemicQuestions \App\Entity\SystemicQuestions #}
{# systemicQuestion \App\Entity\SystemicQuestion #}

{% extends 'base.html.twig' %}

{% block title %}{{ 'systemic_question.list.title'|trans }}{% endblock %}
{% block content %}
    <div class="card">
        <div class="card-header">
            <h1 class="h5 mb-0">
                {{ 'systemic_question.list.headline'|trans }}
            </h1>
        </div>
        <div class="card-body pl-1 pr-1 pb-2 pt-2">
            <span class="text-black-50 float-left text-break text-justify px-1 pb-2">
                <i style="font-size: 2rem;" class="pr-3 pl-2 float-left font-weight-bold ion-md-information-circle-outline"></i>
                {{ 'systemic_question.list.explanation'|trans }}
            </span>
            {% if systemicQuestions|length %}
                <div class="table-responsive">
                    <table class="table table-striped table-sm mb-0">
                        <thead class="thead-light">
                        <tr>
                            <th class="text-center" scope="col">
                                Fragetext
                            </th>
                            <th scope="col" class="text-center"><div class="btn-outline btn btn-sm">Aktionen</div></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for systemicQuestion in systemicQuestions %}
                            <tr>
                                <td class="text-center small">{{ systemicQuestion.question }}</td>
                                <td class="text-center">
                                    <a class="input-group input-group-sm"
                                       href="{{ path('systemic_question_form', { 'id': systemicQuestion.getId }) }}">
                                        <button class="btn btn-primary form-control">
                                            Bearbeiten
                                        </button>
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="ion ion-md-brush"></i></span>
                                            <span class="input-group-text"><i class="ion ion-md-help-circle-outline"></i></span>
                                        </div>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    Es wurden bisher keine systemische Fragen angelegt.
                {% endif %}
            </div>
            <hr>

            <a class="input-group input-group-sm" href="{{ path('systemic_question_form') }}">
                <div class="btn btn-block btn-primary form-control">
                    {{ 'systemic_question.create.title'|trans }}
                </div>
                <div class="input-group-append">
                    <span class="input-group-text"><i class="ion ion-md-add"></i></span>
                    <span class="input-group-text"><i class="ion ion-md-people"></i></span>
                </div>
            </a>
        </div>
    </div>
{% endblock %}

{% block footer_back_href %}
    {{- path('walk_home_screen') -}}
{% endblock %}
