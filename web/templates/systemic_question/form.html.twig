{% extends 'base.html.twig' %}
{% block title %}
    {% if isCreateNew %}
        {{ 'systemic_question.create.title'|trans }}
    {% else %}
        {{ 'systemic_question.edit.title'|trans }}
    {% endif %}
{% endblock %}
{% block content %}
    <div class="card">
        <div class="card-header">
            <h1 class="h5 mb-0">
                {% if isCreateNew %}
                    {{ 'systemic_question.create.headline'|trans }}
                {% else %}
                    {{ 'systemic_question.edit.headline'|trans }}
                {% endif %}
            </h1>
        </div>
        <div class="card-body pl-1 pr-1 pb-2">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.question) }}

            <div class="input-group input-group-sm">
                <button class="btn btn-block btn-primary form-control" type="submit">
                    {% if isCreateNew %}
                        {{ 'systemic_question.create.save'|trans }}
                    {% else %}
                        {{ 'systemic_question.edit.save'|trans }}
                    {% endif %}
                </button>
                <div class="input-group-append">
                    <span class="input-group-text"><i class="ion ion-md-add"></i></span>
                    <span class="input-group-text"><i class="ion ion-md-help-circle-outline"></i></span>
                </div>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block footer_back_href %}
    {{- path('systemic_question_list') -}}
{% endblock %}
