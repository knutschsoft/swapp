{
    "config": {
        "run-mode": "docker",
        "run-exec": "docker-compose exec --user=docker -T web"
    },
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\Message\\Action\\Beams",
                "options": {
                    "subjectLength": 72,
                    "bodyLineLength": 100
                },
                "conditions": []
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "vendor/bin/local-php-security-checker",
                "options": [],
                "conditions": []
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": [],
                "conditions": []
            },
            {
                "action": "vendor/bin/phpcs -s src tests",
                "options": [],
                "conditions": []
            },
            {
                "action": "vendor/bin/phpstan analyse --no-progress --ansi",
                "options": [],
                "conditions": []
            },
            {
                "action": "vendor/bin/phpunit --colors --filter=Unit",
                "options": [],
                "conditions": []
            },
            {
                "action": "vendor/bin/behat --colors --format=progress {$STAGED_FILES|of-type:feature|replace:web\tests|with:tests}",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": [
                            "feature"
                        ]
                    }
                ]
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    }
}
