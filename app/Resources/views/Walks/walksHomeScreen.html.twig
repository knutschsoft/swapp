{% extends '::base.html.twig' %}

{% block title %}Streetwork-Runden{% endblock %}
{% block content %}
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="swapp-headline-container">
        <h1>
            Streetwork-Runden
        </h1>
    </div>
    <div class="mb1 inline-block clearfix">
        <select name="Team" class="s-select-team rounded-left btn-outline blue mxn1">
            {% for team in teams %}
                <option value={{ team.getId }}>{{ team.getName }}</option>
            {% else %}
                <option value="Keinem Team zugeordnet">Keinem Team zugeordnet</option>
            {% endfor %}
        </select>
        <a class="btn btn-primary rounded-right s-select-team-link" href="{{ path('walk_create_form', { 'teamId': teams|first.getId}) }}">Runde beginnen</a>
        <script>
            window.document.getElementsByClassName('s-select-team')[0].addEventListener('change', function() {
                var href, hrefParts, linkElem;
                linkElem = window.document.getElementsByClassName('s-select-team-link')[0];
                href = linkElem.getAttribute('href');
                hrefParts = href.split('/');
                hrefParts.pop();
                hrefParts.push(this.value);
                href = hrefParts.join('/');
                linkElem.setAttribute('href', href);
            });
        </script>
    </div>
    <div class="right">
        <a href="{{ path('tag_home_screen') }}" class="btn btn-primary right">Tags</a>
    </div>

    <div class="">
        <table class="table-light">
            <thead>
            <tr>
                <th>Name</th>
                <th>Bewertung</th>
                <th>Beginn</th>
                <th>Ende</th>
                <th class="right-align">Detailansicht</th>
            </tr>
            </thead>
            <tbody>
            {% for walk in walks %}
                <tr>
                    <td>{{ walk.getName }}</td>
                    <td>{{ walk.getRating }}</td>
                    <td>
                        {{ walk.getStartTime|localizeddate('short', 'short') }}
                    </td>
                    <td>
                        {{ walk.getEndTime|localizeddate('short', 'short') }}
                    </td>
                    <td>
                        <a class="btn btn-primary sm-col-right" href="{{ path('walk_show', { 'id': walk.getId }) }}">Runde
                            ansehen</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Es wurden noch keine Runden angelegt.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
