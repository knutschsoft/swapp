<div class="card">
    <div class="card-header">
        <h1 class="h5 mb-0">
            Wegpunkte dieser Runde
        </h1>
    </div>
    <div class="card-body pl-1 pr-1 pb-2">
        <div class="table-responsive">
            <table class="table table-striped table-sm mb-0">
                <thead class="thead-light">
                <tr>
                    <th class="text-center" scope="col">
                        Name
                    </th>
                    <th class="text-center" scope="col">Meeting</th>
                    <th class="text-center" scope="col">
                        MÃ¤nner
                        <span class=""><i class="ion ion-md-male"></i></span>
                    </th>
                    <th class="text-center" scope="col">
                        Frauen
                        <span class=""><i class="ion ion-md-female"></i></span>
                    </th>
                    <th class="text-center" scope="col">
                        Andere
                        <span class=""><i class="ion ion-md-transgender"></i></span>
                    </th>
                    <th class="text-center" scope="col">Detailansicht</th>
                </tr>
                </thead>
                <tbody>
                    {% for waypoint in wayPoints %}
                        <tr>
                            <td class="text-center small">{{ waypoint.getLocationName }}</td>
                            <td class="text-center small">{% if waypoint.getIsMeeting == 1 %}ja{% else %}nein{% endif %}</td>
                            <td class="text-center small">{{ waypoint.malesCount }}</td>

                            <td class="text-center small">{{ waypoint.femalesCount }}</td>
                            <td class="text-center small">{{ waypoint.queerCount }}</td>
                            <td class="text-center">
                                <a class="input-group input-group-sm"
                                   href="{{ path('way_point_show', { 'wayPointId': waypoint.getId }) }}">
                                    <button class="btn btn-primary form-control">
                                        Wegpunkt
                                    </button>
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="ion ion-md-eye"></i></span>
                                    </div>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
