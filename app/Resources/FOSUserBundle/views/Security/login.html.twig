{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}

        <div class="alert alert-danger" role="alert">
            {{ error.messageKey|trans( [], 'security') }}
        </div>
    {% endif %}
    <div class="sm-col-10 md-col-6 lg-col-4 mx-auto mt2">
        <div class="overflow-hidden bg-white border rounded">
            <div class="p2 white bg-blue">
                <h1 class="h2 m0">Anmeldung</h1>
            </div>

            <form class="sm-col-6 p2" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                <input autofocus placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" class="block col-12 mb1 field" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                <input class="block col-12 mb1 field" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" type="password" id="password" name="_password" required="required" />

                <label class="block col-12 mb2" for="remember_me">
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                </label>

                <input class="btn btn-primary" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />


            </form>

            {#<div style="width: 100%; height: 15px; border-bottom: 1px solid lightgrey; text-align: center">#}
               {#<span style="font-size: 20px; background-color: #F3F5F6; padding: 0 20px;">#}
                    {#oder <!--Padding is optional-->#}
                {#</span>#}
            {#</div>#}
            {#<div class="sm-col-12 p2">#}
                {#<a class="btn btn-reddit btn-primary" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}">Mit Facebook anmelden</a>#}
            {#</div>#}
        </div>
    </div>
{% endblock fos_user_content %}
