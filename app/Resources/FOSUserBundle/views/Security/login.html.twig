{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error.messageKey|trans( [], 'security') }}
        </div>
    {% endif %}
    <div class="card xs-12">
        <div class="card-header">Anmeldung</div>

        <div class="card-body">
            <form class="sm-col-6 p2" action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <div class="form-group">
                    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="ion ion-md-person"></i></div>
                        </div>
                        <input autofocus placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="ion ion-md-unlock"></i></div>
                        </div>
                        <input class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
                    </div>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" />
                    <label class="block col-12 mb2" for="remember_me">
                        {{- 'security.login.remember_me'|trans({}, 'FOSUserBundle') -}}
                    </label>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <input class="btn btn-primary form-control" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                        <div class="input-group-append">
                            <div class="input-group-text"><i class="ion ion-md-log-in"></i></div>
                        </div>
                    </div>
                </div>

                {#<div style="width: 100%; height: 15px; border-bottom: 1px solid lightgrey; text-align: center">#}
                {#<span style="font-size: 20px; background-color: #F3F5F6; padding: 0 20px;">#}
                {#oder <!--Padding is optional-->#}
                {#</span>#}
                {#</div>#}
                {#<div class="sm-col-12 p2">#}
                {#<a class="btn btn-reddit btn-primary" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}">Mit Facebook anmelden</a>#}
                {#</div>#}
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
