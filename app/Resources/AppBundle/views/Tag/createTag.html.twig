{% extends '::base.html.twig' %}
{% block title %}{{ 'tag.create.title'|trans }}{% endblock %}
{% block content %}
    <div class="card">
        <div class="card-header">
            <h1 class="h5 mb-0">
                {{ 'tag.create.headline'|trans }}
            </h1>
        </div>
        <div class="card-body pl-1 pr-1 pb-2">
            {{ form_start(form) }}
            {{ form_errors(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.color) }}

            <a class="input-group input-group-sm" href="{{ path('tag_create') }}">
                <div class="btn btn-block mb-1 btn-primary form-control">
                    {{ 'tag.create.title'|trans }}
                </div>
                <div class="input-group-append">
                    <span class="input-group-text"><i class="ion ion-md-add"></i></span>
                    <span class="input-group-text"><i class="ion ion-md-pricetags"></i></span>
                </div>
            </a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block footer_back_href %}
    {{- path('tag_home_screen') -}}
{% endblock %}
