<ul class="list-group">
    <li class="list-group-item font-weight-bold d-flex justify-content-between align-items-center lead">
        <span class="text-strong">{{ 'tag.overview.name'|trans }}</span>
        <span class="text-strong">{{ 'tag.overview.color'|trans }}</span>
    </li>
    {% for tag in tags %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            {{ tag.getName }}
            <span class="badge badge-primary badge-pill" style="background-color: {{ tag.getColor }};">{{ tag.getColor }}</span>
        </li>
    {% endfor %}
</ul>
